{
  "name": "create-precast-app",
  "version": "0.2.6",
  "description": "CLI tool to scaffold modern web applications with your chosen stack",
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "bin": {
    "create-precast-app": "./dist/cli.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "sh -c 'if command -v bun >/dev/null 2>&1 && echo \"$npm_config_user_agent\" | grep -q bun; then bun --watch src/cli.ts; else tsx watch src/cli.ts; fi'",
    "dev:bun": "bun --watch src/cli.ts",
    "dev:node": "tsx watch src/cli.ts",
    "build": "tsup && cp -r src/templates dist/ && pnpm run audit:fix",
    "audit:fix": "(pnpm audit --audit-level=moderate 2>/dev/null || echo 'Audit check skipped in CI environment') || true",
    "update:templates": "pnpm run src/scripts/update-template-deps.ts && pnpm run build",
    "security:check": "pnpm audit --audit-level=moderate",
    "prepublishOnly": "echo 'Build should be done before publishing'",
    "prepack": "echo 'Build should be done before packing'",
    "publish:beta": "pnpm run build && pnpm version prerelease --preid=beta && pnpm publish --tag beta",
    "publish:patch": "pnpm run build && pnpm version patch && pnpm publish",
    "publish:minor": "pnpm run build && pnpm version minor && pnpm publish",
    "publish:major": "pnpm run build && pnpm version major && pnpm publish",
    "publish:dry": "echo 'Use: pnpm publish --dry-run (after ensuring node is in PATH)'",
    "pack:test": "echo 'Files that will be published:' && ls -la dist/ && echo 'Plus: README.md, CHANGELOG.md, LICENSE, package.json'",
    "publish:check": "pnpm run build && echo 'Ready for publishing!'",
    "publish:setup": "./scripts/publish.sh",
    "test": "pnpm run build && vitest run --config tests/config/vitest.config.ts",
    "test:watch": "pnpm run build && vitest watch --config tests/config/vitest.config.ts",
    "test:ui": "pnpm run build && vitest --ui --config tests/config/vitest.config.ts",
    "test:unit": "vitest run src/**/*.test.ts --config tests/config/vitest.config.ts",
    "test:integration": "vitest run tests/integration/**/*.test.ts --config tests/config/vitest.config.ts",
    "test:quality": "RUN_QUALITY_TESTS=true vitest run tests/integration/project-quality.test.ts --config tests/config/vitest.config.ts",
    "test:e2e": "RUN_E2E=true vitest run tests/e2e/**/*.test.ts --config tests/config/vitest.config.ts",
    "test:all": "./scripts/test-cli.sh",
    "test:full": "RUN_QUALITY_TESTS=true RUN_E2E=true ./scripts/test-cli.sh",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "boxen": "^8.0.1",
    "chalk": "5",
    "chalk-animation": "^2.0.3",
    "cli-progress": "^3.12.0",
    "cli-width": "^4.1.0",
    "commander": "^11.1.0",
    "consola": "^3.4.2",
    "execa": "^8.0.1",
    "figlet": "^1.8.2",
    "fs-extra": "^11.2.0",
    "globby": "^14.1.0",
    "gradient-string": "^3.0.0",
    "handlebars": "^4.7.8",
    "inquirer": "^9.2.12",
    "jsonc-parser": "^3.3.1",
    "listr2": "^9.0.1",
    "log-update": "^6.1.0",
    "nanospinner": "^1.2.2",
    "ora": "^8.2.0",
    "picocolors": "^1.1.1",
    "posthog-node": "^5.6.0",
    "strip-ansi": "^7.1.0",
    "terminal-kit": "^3.1.2",
    "terminal-link": "^4.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.6",
    "@types/figlet": "^1.7.0",
    "@types/fs-extra": "^11.0.4",
    "@types/handlebars": "^4.1.0",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^24.2.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.3",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "tsup": "^8.0.1",
    "tsx": "^4.20.3",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "cli",
    "scaffold",
    "generator",
    "create-app",
    "boilerplate",
    "template",
    "react",
    "vue",
    "angular",
    "next",
    "nuxt",
    "svelte",
    "solid",
    "astro",
    "remix",
    "vite",
    "typescript",
    "tailwind",
    "prisma",
    "drizzle"
  ],
  "license": "MIT",
  "author": {
    "name": "Precast Team"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BuunGroupCore/precast-app.git",
    "directory": "packages/cli"
  },
  "bugs": {
    "url": "https://github.com/BuunGroupCore/precast-app/issues"
  },
  "homepage": "https://github.com/BuunGroupCore/precast-app#readme"
}
