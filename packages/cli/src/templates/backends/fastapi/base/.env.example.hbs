# Application Settings
APP_NAME="{{projectName}}"
APP_VERSION="1.0.0"
ENVIRONMENT=development
DEBUG=true

# Security
SECRET_KEY="your-secret-key-change-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=30

{{#if config.database}}
{{#if (eq config.database "postgres")}}
# PostgreSQL Database
DATABASE_URL="postgresql+asyncpg://user:password@localhost:5432/{{projectName}}"
{{/if}}
{{#if (eq config.database "mysql")}}
# MySQL Database  
DATABASE_URL="mysql+aiomysql://user:password@localhost:3306/{{projectName}}"
{{/if}}
{{#if (eq config.database "mongodb")}}
# MongoDB Database
DATABASE_URL="mongodb://localhost:27017/{{projectName}}"
{{/if}}
{{#if (eq config.database "sqlite")}}
# SQLite Database
DATABASE_URL="sqlite+aiosqlite:///./{{projectName}}.db"
{{/if}}
{{/if}}

# Redis (for caching and background tasks)
REDIS_URL="redis://localhost:6379"

# CORS Settings
CORS_ORIGINS="http://localhost:3000,http://localhost:8080"
ALLOWED_HOSTS="localhost,127.0.0.1"

{{#if (includes config.powerups "sentry")}}
# Sentry (Error Tracking)
SENTRY_DSN=""
{{/if}}

# Email Settings (if using email features)
SMTP_HOST=""
SMTP_PORT=587
SMTP_USERNAME=""
SMTP_PASSWORD=""
EMAILS_FROM_EMAIL="noreply@{{projectName}}.com"

# External API Keys
# Add your external service API keys here