{
  "name": "precast-app",
  "version": "1.0.0",
  "private": true,
  "description": "A clean code comic website with CLI tool - monorepo",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter website dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "test": "pnpm -r test",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "changeset": "changeset",
    "changeset:add": "changeset add",
    "changeset:status": "changeset status",
    "version": "changeset version",
    "release": "changeset publish",
    "ci:build": "pnpm install --frozen-lockfile && pnpm build",
    "ci:test": "pnpm typecheck && pnpm lint && pnpm test",
    "deploy:website": "pnpm --filter website build",
    "setup:husky": "husky || echo 'Husky not available - install git first'"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.1",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.11.5",
    "husky": "^9.1.7",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  }
}
