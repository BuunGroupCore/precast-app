{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": [
    "**/.env.*local",
    "tsconfig.json"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"{{#if (eq framework 'svelte')}}, ".svelte-kit/**", "build/**"{{/if}}{{#if (eq framework 'nuxt')}}, ".nuxt/**", ".output/**"{{/if}}{{#if (eq framework 'astro')}}, "dist/**"{{/if}}{{#if (eq framework 'vite')}}, "dist/**"{{/if}}{{#if (eq framework 'solid')}}, "dist/**"{{/if}}],
      "outputLogs": "new-only"
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": ["build"],
      "persistent": true
    },
    "lint": {
      "outputs": [],
      "outputLogs": "errors-only"
    },
    "type-check": {
      "dependsOn": ["^build"],
      "outputs": [],
      "outputLogs": "errors-only"
    },
    "test": {
      "outputs": ["coverage/**"],
      "outputLogs": "new-only"
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}