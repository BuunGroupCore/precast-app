{
  "name": "{{name}}-api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    {{#if config.orm}}{{#if (eq config.orm "prisma")}}"postinstall": "prisma generate",
    "predev": "prisma db push --skip-generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    {{/if}}{{/if}}"dev": "bun run --watch src/index.ts",
    "dev:node": "tsx watch src/index.ts",
    "build": "tsup",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "express": "^4.19.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.4.5"{{#if typescript}},
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17"{{/if}}
  },
  "devDependencies": {
    {{#if typescript}}"tsx": "^4.7.1",
    "tsup": "^8.0.2",
    "typescript": "^5.4.2",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",{{/if}}
    "nodemon": "^3.1.0"
  }
}