{{#if (eq styling "tailwind")}}import './style.css'{{else if (eq styling "scss")}}import './style.scss'{{else}}import './style.css'{{/if}}

const app = document.querySelector<HTMLDivElement>('#app')!

app.innerHTML = `
  <div class="{{#if (eq styling 'tailwind')}}min-h-screen flex flex-col items-center justify-center p-8 bg-gradient-to-br from-blue-50 to-indigo-100{{else}}container{{/if}}">
    <main class="{{#if (eq styling 'tailwind')}}text-center space-y-8{{else}}main{{/if}}">
      <h1 class="{{#if (eq styling 'tailwind')}}text-4xl font-bold text-gray-800 mb-8{{else}}title{{/if}}">{{name}} with Vite</h1>
      <div class="{{#if (eq styling 'tailwind')}}bg-white p-6 rounded-lg shadow-md max-w-sm{{else}}card{{/if}}">
        <h2 class="{{#if (eq styling 'tailwind')}}text-xl font-semibold text-gray-800 mb-4{{else}}card-title{{/if}}">Counter</h2>
        <div class="{{#if (eq styling 'tailwind')}}flex items-center justify-center space-x-4{{else}}counter-controls{{/if}}">
          <button id="decrement" class="{{#if (eq styling 'tailwind')}}px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600{{else}}btn btn-minus{{/if}}">-</button>
          <span id="counter" class="{{#if (eq styling 'tailwind')}}text-2xl font-bold text-gray-800 min-w-[3rem] text-center{{else}}counter-value{{/if}}">0</span>
          <button id="increment" class="{{#if (eq styling 'tailwind')}}px-4 py-2 bg-green-500 text-white rounded hover:bg-green-600{{else}}btn btn-plus{{/if}}">+</button>
        </div>
      </div>
    </main>
  </div>
`

{{#if typescript}}let count: number = 0{{else}}let count = 0{{/if}}

document.querySelector('#increment'){{#if typescript}}!{{/if}}.addEventListener('click', () => {
  count++
  document.querySelector('#counter'){{#if typescript}}!{{/if}}.textContent = count.toString()
})

document.querySelector('#decrement'){{#if typescript}}!{{/if}}.addEventListener('click', () => {
  count--
  document.querySelector('#counter'){{#if typescript}}!{{/if}}.textContent = count.toString()
})