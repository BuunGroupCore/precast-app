/**
 * @fileoverview Express API configuration constants
 */

/**
 * Application configuration
 */
export const APP_CONFIG = {
  name: '{{name}}-api',
  displayName: '{{name}} API',
  description: '{{name}} API Server',
  version: '1.0.0',
  environment: process.env.NODE_ENV || 'development',
} as const;

/**
 * Server configuration
 */
export const SERVER_CONFIG = {
  port: parseInt(process.env.PORT || '3001', 10),
  host: process.env.HOST || 'localhost',
  apiPrefix: '/api',
} as const;

/**
 * CORS configuration
 */
export const CORS_CONFIG = {
  origin: process.env.CORS_ORIGIN?.split(',') || [
    'http://localhost:5173',
    'http://localhost:3000',
    'http://localhost:4200',
  ],
  credentials: true,
  methods: ['GET', 'POST', 'PUT', 'DELETE', 'PATCH', 'OPTIONS'] as string[],
  allowedHeaders: ['Content-Type', 'Authorization'] as string[],
};

/**
 * Health check configuration
 */
export const HEALTH_CHECK_CONFIG = {
  path: `${SERVER_CONFIG.apiPrefix}/health`,
  message: `${APP_CONFIG.displayName} is running`,
} as const;