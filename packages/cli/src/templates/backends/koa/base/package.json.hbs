{
  "name": "{{name}}-api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    {{#if config.orm}}{{#if (eq config.orm "prisma")}}"postinstall": "prisma generate",
    "predev": "prisma db push --skip-generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    {{/if}}{{/if}}"dev": "bun run --watch src/index.ts",
    "dev:node": "tsx watch src/index.ts",
    "build": "tsup",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "koa": "^2.15.0",
    "koa-bodyparser": "^4.4.1",
    "koa-cors": "^0.0.16",
    "koa-helmet": "^7.0.2",
    "koa-router": "^12.0.1",
    "dotenv": "^16.4.5"{{#if typescript}},
    "@types/koa": "^2.15.0",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-cors": "^0.0.5",
    "@types/koa-router": "^7.4.8"{{/if}}
  },
  "devDependencies": {
    {{#if typescript}}"tsx": "^4.7.1",
    "tsup": "^8.0.2",
    "typescript": "^5.4.2",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",{{/if}}
    "nodemon": "^3.1.0"
  }
}