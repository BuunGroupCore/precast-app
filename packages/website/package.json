{
  "name": "@precast/website",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run sync:stack-config && npm run generate:sitemap && tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist node_modules",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "generate:sitemap": "node --loader tsx/esm scripts/generate-sitemap.ts",
    "sync:stack-config": "node --loader tsx/esm scripts/sync-stack-config.ts"
  },
  "dependencies": {
    "@precast/hooks": "workspace:*",
    "@precast/ui": "workspace:*",
    "@precast/utils": "workspace:*",
    "clsx": "^2.1.0",
    "dexie": "^4.0.11",
    "eslint-plugin-react": "^7.37.5",
    "framer-motion": "^11.0.3",
    "lucide-react": "^0.536.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^2.0.5",
    "react-icons": "^5.0.1",
    "react-router-dom": "^6.21.3",
    "recharts": "^3.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.20.3",
    "typescript": "^5.3.3",
    "vite": "^5.0.12"
  }
}
