import { Injectable } from '@nestjs/common';

@Injectable()
export class AppService {
  getHealth() {
    return {
      status: 'ok',
      message: '{{config.name}} API is running',
      timestamp: new Date().toISOString(),
    };
  }

  getHello() {
    return {
      message: 'Hello from {{config.name}} API!',
      version: '1.0.0',
    };
  }
}