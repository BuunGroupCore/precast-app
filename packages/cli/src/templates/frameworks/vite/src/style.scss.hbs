{{#if (eq styling "scss")}}* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
    'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue',
    sans-serif;
  background: linear-gradient(to bottom right, #f0f9ff, #e0e7ff);
  min-height: 100vh;
  color: #333;
}

.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 2rem;
}

.main {
  text-align: center;
  max-width: 600px;
}

.title {
  font-size: 2.5rem;
  font-weight: bold;
  margin-bottom: 2rem;
  color: #1f2937;
}

.card {
  background: white;
  padding: 1.5rem;
  border-radius: 0.5rem;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  max-width: 20rem;
  margin: 0 auto;

  &-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: #1f2937;
    margin-bottom: 1rem;
  }
}

.counter {
  &-controls {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
  }

  &-value {
    font-size: 1.5rem;
    font-weight: bold;
    color: #1f2937;
    min-width: 3rem;
    text-align: center;
  }
}

.btn {
  padding: 0.5rem 1rem;
  color: white;
  border: none;
  border-radius: 0.25rem;
  cursor: pointer;
  font-size: 1.125rem;
  font-weight: bold;
  transition: background-color 0.2s;

  &-minus {
    background-color: #ef4444;

    &:hover {
      background-color: #dc2626;
    }
  }

  &-plus {
    background-color: #10b981;

    &:hover {
      background-color: #059669;
    }
  }
}{{/if}}