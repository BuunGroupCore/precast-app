[build]
  publish = "{{deployment.outputDir}}"
  command = "{{deployment.buildCommand}}"
  {{#if isMonorepo}}
  # Monorepo configuration
  base = "apps/web"
  {{/if}}

[build.environment]
  NODE_VERSION = "18"
  NPM_FLAGS = "--production=false"

{{#if (eq deploymentType "static")}}
# SPA redirect for client-side routing
[[redirects]]
  from = "/*"
  to = "/index.html"
  status = 200
{{/if}}

{{#if (eq deploymentType "fullstack")}}
# API proxy for backend (if using serverless functions)
[[redirects]]
  from = "/api/*"
  to = "/.netlify/functions/:splat"
  status = 200

# SPA fallback for other routes
[[redirects]]
  from = "/*"
  to = "/index.html"
  status = 200
{{/if}}

[[headers]]
  for = "/*"
  [headers.values]
    X-Frame-Options = "DENY"
    X-XSS-Protection = "1; mode=block"
    X-Content-Type-Options = "nosniff"
    Referrer-Policy = "strict-origin-when-cross-origin"

[[headers]]
  for = "/static/*"
  [headers.values]
    Cache-Control = "public, max-age=31536000, immutable"

[[headers]]
  for = "/*.js"
  [headers.values]
    Cache-Control = "public, max-age=31536000, immutable"

[[headers]]
  for = "/*.css"
  [headers.values]
    Cache-Control = "public, max-age=31536000, immutable"