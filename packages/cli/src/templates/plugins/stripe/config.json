{
  "id": "stripe",
  "name": "Stripe",
  "description": "Accept payments with Stripe",
  "category": "payments",
  "pricing": "freemium",
  "dependencies": {
    "react": ["@stripe/stripe-js@^2.4.0", "@stripe/react-stripe-js@^2.4.0"],
    "vue": ["@stripe/stripe-js@^2.4.0"],
    "next": ["@stripe/stripe-js@^2.4.0", "@stripe/react-stripe-js@^2.4.0"]
  },
  "backendDependencies": {
    "*": ["stripe@^13.0.0"]
  },
  "devDependencies": {
    "*": ["@types/stripe@^8.0.0"]
  },
  "envVariables": {
    "STRIPE_SECRET_KEY": "sk_test_...",
    "STRIPE_PUBLISHABLE_KEY": "pk_test_...",
    "STRIPE_WEBHOOK_SECRET": "whsec_..."
  },
  "setupFiles": {
    "react": [
      {
        "template": "react/checkout.tsx.hbs",
        "output": "src/components/StripeCheckout.tsx"
      }
    ],
    "next": [
      {
        "template": "next/checkout.tsx.hbs",
        "output": "src/components/stripe/CheckoutForm.tsx"
      },
      {
        "template": "next/api-route.ts.hbs",
        "output": "src/app/api/stripe/route.ts"
      }
    ]
  },
  "backendSetupFiles": {
    "express": [
      {
        "template": "express/payment-route.ts.hbs",
        "output": "src/routes/stripe.ts"
      }
    ]
  },
  "postInstall": {
    "instructions": [
      "1. Get your API keys from https://dashboard.stripe.com/test/apikeys",
      "2. Add the keys to your .env file",
      "3. Set up webhook endpoints at https://dashboard.stripe.com/test/webhooks",
      "4. Test payments with Stripe test cards: 4242 4242 4242 4242"
    ]
  },
  "documentationUrl": "https://stripe.com/docs",
  "setupUrl": "https://dashboard.stripe.com"
}
