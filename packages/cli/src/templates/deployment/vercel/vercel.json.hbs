{
  {{#if isMonorepo}}
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "{{deployment.buildCommand}}",
  "outputDirectory": "{{deployment.outputDir}}",
  "installCommand": "cd ../.. && {{packageManager}} install",
  "devCommand": "npm run dev",
  {{else}}
  "buildCommand": "{{deployment.buildCommand}}",
  "outputDirectory": "{{deployment.outputDir}}",
  "devCommand": "npm run dev",
  "installCommand": "{{packageManager}} install",
  {{/if}}
  "framework": "{{#if (eq framework 'react')}}create-react-app{{else if (eq framework 'next')}}nextjs{{else if (eq framework 'vue')}}vue{{else if (eq framework 'svelte')}}svelte{{else if (eq framework 'astro')}}astro{{else if (eq framework 'remix')}}remix{{else if (eq framework 'nuxt')}}nuxtjs{{else}}static{{/if}}",
  {{#if (eq deploymentType 'fullstack')}}
  {{#if (eq framework 'next')}}
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  {{/if}}
  {{/if}}
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}