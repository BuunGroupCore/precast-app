{
  "name": "{{name}}-api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    {{#if orm}}{{#if (eq orm "prisma")}}"postinstall": "prisma generate",
    "predev": "prisma db push --skip-generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    {{/if}}{{/if}}{{#if (eq runtime "bun")}}"dev": "bun run --watch src/index.ts",
    {{else if (eq runtime "deno")}}"dev": "deno run --watch --allow-net --allow-read --allow-env src/index.ts",
    {{else if (eq packageManager "bun")}}"dev": "bun run --watch src/index.ts",
    {{else}}"dev": "tsx watch src/index.ts",
    {{/if}}
    "build": "tsup",
    {{#if (eq runtime "bun")}}"start": "bun dist/index.js",
    {{else if (eq runtime "deno")}}"start": "deno run --allow-net --allow-read --allow-env dist/index.js",
    {{else}}"start": "node dist/index.js",{{/if}}
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "express": "^4.19.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    {{#if typescript}}"@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.11.20",
    "tsx": "^4.7.1",
    "tsup": "^8.0.2",
    "typescript": "^5.4.2",{{/if}}
    "nodemon": "^3.1.0"
  }
}