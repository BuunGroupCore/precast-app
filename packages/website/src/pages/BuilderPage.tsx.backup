                          <div className="flex items-center gap-1">
                            {/* Framework Icon */}
                            {frameworks.find((f) => f.id === project.framework)?.icon && (
                              <div className="p-1">
                                {React.createElement(
                                  frameworks.find((f) => f.id === project.framework)!.icon,
