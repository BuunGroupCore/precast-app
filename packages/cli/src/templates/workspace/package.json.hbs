{
  "name": "{{name}}",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    {{#if (and orm (eq orm "prisma"))}}
    "predev": "cd apps/api && prisma generate",
    "prebuild": "cd apps/api && prisma generate",
    "db:generate": "cd apps/api && prisma generate",
    "db:push": "cd apps/api && prisma db push",
    "db:migrate": "cd apps/api && prisma migrate dev",
    "db:studio": "cd apps/api && prisma studio",
    {{/if}}
    {{#if docker}}
    "docker:up": "bash -c 'docker compose -f docker/docker-compose.yml up -d'",
    "docker:down": "bash -c 'docker compose -f docker/docker-compose.yml down'",
    "docker:logs": "bash -c 'docker compose -f docker/docker-compose.yml logs -f'",
    "docker:reset": "bash -c 'docker compose -f docker/docker-compose.yml down -v && docker compose -f docker/docker-compose.yml up -d'",
    {{/if}}
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "turbo": "^2.5.5",
    {{#if typescript}}"typescript": "^5.4.2",{{/if}}
    "eslint": "^8.57.0"
  },
  "packageManager": "{{packageManager}}@{{packageManagerVersion}}"
}