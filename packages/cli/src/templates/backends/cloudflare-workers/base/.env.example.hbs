# Cloudflare Workers Environment Variables
# Copy this file to .env.local for local development

# API Configuration
NODE_ENV=development
API_VERSION=v1

# Authentication
JWT_SECRET=your-secret-key-change-in-production
API_KEY=your-api-key

{{#if (eq database "cloudflare-d1")}}
# Cloudflare D1 Database
# These are set in wrangler.toml, not environment variables
# DATABASE_ID=your-database-id
# PREVIEW_DATABASE_ID=your-preview-database-id
{{/if}}

{{#if (ne database "cloudflare-d1")}}
# External Database
DATABASE_URL="{{#if (eq database "postgres")}}postgresql://user:password@localhost:5432/{{name}}{{/if}}{{#if (eq database "mysql")}}mysql://user:password@localhost:3306/{{name}}{{/if}}{{#if (eq database "mongodb")}}mongodb://localhost:27017/{{name}}{{/if}}{{#if (eq database "neon")}}postgres://user:password@ep-xxx.us-east-1.aws.neon.tech/{{name}}{{/if}}{{#if (eq database "planetscale")}}mysql://xxx:pscale_pw_xxx@aws.connect.psdb.cloud/{{name}}?ssl={\"rejectUnauthorized\":true}{{/if}}{{#if (eq database "turso")}}libsql://{{name}}-xxx.turso.io{{/if}}"
{{#if (eq database "turso")}}DATABASE_AUTH_TOKEN="your-turso-auth-token"{{/if}}
{{/if}}

# Cloudflare Account (for wrangler commands)
CLOUDFLARE_ACCOUNT_ID=your-account-id
CLOUDFLARE_API_TOKEN=your-api-token

# CORS Origins (comma-separated)
CORS_ORIGINS_DEV=http://localhost:3000,http://localhost:5173
CORS_ORIGINS_PROD=https://{{name}}.com

{{#if authProvider}}
# OAuth Providers (if using)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
{{/if}}

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=60

# Optional: R2 Storage
# R2_ACCESS_KEY_ID=your-r2-access-key
# R2_SECRET_ACCESS_KEY=your-r2-secret-key
# R2_BUCKET_NAME={{name}}-bucket

# Optional: Email Service
# RESEND_API_KEY=your-resend-api-key
# SENDGRID_API_KEY=your-sendgrid-api-key