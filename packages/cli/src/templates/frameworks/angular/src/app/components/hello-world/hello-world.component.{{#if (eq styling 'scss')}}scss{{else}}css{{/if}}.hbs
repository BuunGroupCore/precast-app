{{#unless (eq styling "tailwind")}}.card {
  background: white;
  border-radius: 8px;
  padding: 2rem;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.card-title {
  font-size: 1.5rem;
  margin-bottom: 1.5rem;
  color: #333;
}

.links {
  margin-top: 1.5rem;
}

.link-list {
  list-style: none;
  padding: 0;
  margin-top: 1rem;
}

.link-list li {
  margin-bottom: 0.5rem;
}

.link {
  color: #1976d2;
  text-decoration: none;
  
  &:hover {
    text-decoration: underline;
  }
}{{/unless}}