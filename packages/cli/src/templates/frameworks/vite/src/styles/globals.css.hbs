{{#if (eq styling "tailwind")}}
@tailwind base;
@tailwind components;
@tailwind utilities;
{{else}}
/* Global Styles */
:root {
  font-family: Inter, system-ui, Avenir, Helvetica, Arial, sans-serif;
  line-height: 1.5;
  font-weight: 400;

  color-scheme: light dark;
  color: rgba(255, 255, 255, 0.87);
  background-color: #242424;

  font-synthesis: none;
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  
  /* Brutalist Design System colors */
  --color-primary: #facc15;
  --color-dark: #000000;
  --color-light: #ffffff;
  --color-gray: #6b7280;
  
  /* Shadows */
  --shadow-sm: 4px 4px 0px 0px rgba(0, 0, 0, 1);
  --shadow-md: 6px 6px 0px 0px rgba(0, 0, 0, 1);
  --shadow-lg: 8px 8px 0px 0px rgba(0, 0, 0, 1);
  --shadow-xl: 12px 12px 0px 0px rgba(0, 0, 0, 1);
}

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

a {
  font-weight: 500;
  color: #646cff;
  text-decoration: inherit;
}

a:hover {
  color: #535bf2;
}

body {
  margin: 0;
  display: flex;
  place-items: center;
  min-width: 320px;
  min-height: 100vh;
}

h1 {
  font-size: 3.2em;
  line-height: 1.1;
}

button {
  border-radius: 8px;
  border: 1px solid transparent;
  padding: 0.6em 1.2em;
  font-size: 1em;
  font-weight: 500;
  font-family: inherit;
  background-color: #1a1a1a;
  cursor: pointer;
  transition: border-color 0.25s;
}

button:hover {
  border-color: #646cff;
}

button:focus,
button:focus-visible {
  outline: 4px auto -webkit-focus-ring-color;
}

@media (prefers-color-scheme: light) {
  :root {
    color: #213547;
    background-color: #ffffff;
  }
  
  a:hover {
    color: #747bff;
  }
  
  button {
    background-color: #f9f9f9;
  }
}

/* App container */
#app {
  max-width: 1280px;
  margin: 0 auto;
  padding: 2rem;
  text-align: center;
}

.logo {
  height: 6em;
  padding: 1.5em;
  will-change: filter;
  transition: filter 300ms;
}

.logo:hover {
  filter: drop-shadow(0 0 2em #646cffaa);
}

.logo.vanilla:hover {
  filter: drop-shadow(0 0 2em #f7df1eaa);
}

.card {
  padding: 2em;
}

.read-the-docs {
  color: #888;
}

/* Hero Component Styles */
.hero-section {
  margin-bottom: 5rem;
}

.hero-title {
  display: inline-block;
  font-size: 3rem;
  font-weight: 900;
  text-transform: uppercase;
  color: var(--color-dark);
  background-color: var(--color-primary);
  padding: 0.75rem 1.5rem;
  border: 4px solid var(--color-dark);
  box-shadow: 6px 6px 0px 0px rgba(0, 0, 0, 1);
  transition: all 0.15s ease;
}

.hero-title:hover {
  box-shadow: 3px 3px 0px 0px rgba(0, 0, 0, 1);
  transform: translate(3px, 3px);
}

.terminal-title-group {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.terminal-controls {
  display: flex;
  gap: 0.5rem;
}

.control-dot {
  width: 0.75rem;
  height: 0.75rem;
  background-color: var(--color-primary);
}

.terminal-output {
  color: var(--color-dark);
  font-size: 1.125rem;
  margin-bottom: 1rem;
}

.system-status {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
  font-size: 0.875rem;
}

.status-line {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.status-text {
  color: var(--color-dark);
}

.status-summary {
  margin-top: 1rem;
  padding-top: 1rem;
  border-top: 2px solid rgba(0, 0, 0, 0.2);
}

.status-label {
  color: var(--color-dark);
  font-weight: bold;
}

.status-operational {
  color: var(--color-dark);
  background-color: var(--color-primary);
  padding: 0.25rem 0.5rem;
}

.separator-line-thin {
  height: 2px;
  flex: 1;
  max-width: 18rem;
  background-color: rgba(0, 0, 0, 0.2);
}

.separator-text {
  margin: 0 1rem;
  font-size: 0.75rem;
  font-family: 'Courier New', monospace;
  color: rgba(0, 0, 0, 0.6);
  text-transform: uppercase;
  letter-spacing: 0.1em;
}

.separator-diamond {
  margin: 0 1rem;
  width: 0.5rem;
  height: 0.5rem;
  background-color: var(--color-primary);
  border: 2px solid var(--color-dark);
  transform: rotate(45deg);
}

.tech-stack-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 0.75rem;
  max-width: 64rem;
  margin: 0 auto 2rem;
}

.tech-card-content {
  position: relative;
  background-color: var(--color-light);
  border: 2px solid var(--color-dark);
  padding: 0.75rem;
  transition: all 0.15s ease;
}

.tech-card-shadow {
  position: absolute;
  inset: 0;
  background-color: var(--color-dark);
  transform: translate(4px, 4px);
}

.tech-card:hover .tech-card-content {
  transform: translate(2px, 2px);
}

.tech-card-inner {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.5rem;
}

.tech-icon {
  color: var(--color-dark);
}

.tech-name {
  font-weight: bold;
  font-size: 0.75rem;
  text-transform: uppercase;
  letter-spacing: 0.1em;
  color: var(--color-dark);
  text-align: center;
}

.tech-indicator {
  position: absolute;
  top: -0.25rem;
  right: -0.25rem;
  width: 0.5rem;
  height: 0.5rem;
  background-color: var(--color-primary);
  border: 1px solid var(--color-dark);
}

.system-info {
  display: flex;
  justify-content: center;
}

.system-bar {
  display: inline-flex;
  align-items: center;
  gap: 1.5rem;
  padding: 0.75rem 1.5rem;
  background-color: var(--color-dark);
  color: var(--color-primary);
  font-family: 'Courier New', monospace;
  font-size: 0.75rem;
  text-transform: uppercase;
}

.system-item {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.status-dot {
  width: 0.5rem;
  height: 0.5rem;
  background-color: var(--color-primary);
  animation: pulse 2s infinite;
}

/* Footer Styles */
.footer-content {
  max-width: 72rem;
  margin: 0 auto;
  padding: 1.5rem;
}

.footer-inner {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  gap: 1.5rem;
}

.footer-prompt {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  font-family: 'Courier New', monospace;
  font-size: 0.875rem;
}

.icon-primary {
  color: var(--color-primary);
}

.prompt-symbol {
  color: var(--color-primary);
}

.prompt-text {
  color: var(--color-light);
}

.prompt-cursor {
  color: var(--color-primary);
  animation: pulse 1s infinite;
}

.footer-links {
  display: flex;
  align-items: center;
  gap: 1.5rem;
}

.footer-link {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  color: var(--color-primary);
  text-decoration: none;
  font-family: 'Courier New', monospace;
  font-size: 0.75rem;
  text-transform: uppercase;
  letter-spacing: 0.1em;
  transition: color 0.15s ease;
}

.footer-link:hover {
  color: var(--color-light);
}

.link-icon {
  transition: transform 0.15s ease;
}

.footer-link:hover .link-icon {
  transform: translateX(0.25rem);
}

.status-bar {
  margin-top: 1rem;
  padding-top: 1rem;
  border-top: 1px solid rgba(250, 204, 21, 0.2);
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
  font-size: 0.75rem;
  font-family: 'Courier New', monospace;
}

.status-left {
  display: flex;
  align-items: center;
  gap: 1rem;
  color: var(--color-gray);
}

.status-right {
  color: var(--color-gray);
}

.status-value {
  color: var(--color-primary);
}

/* PrecastWidget Styles */
.precast-floating-btn {
  position: fixed;
  bottom: 1.5rem;
  right: 1.5rem;
  z-index: 50;
  background-color: var(--color-primary);
  border: 2px solid var(--color-dark);
  padding: 0.75rem;
  box-shadow: var(--shadow-sm);
  cursor: pointer;
  transition: all 0.15s ease;
}

.precast-floating-btn:hover {
  box-shadow: 2px 2px 0px 0px rgba(0, 0, 0, 1);
  transform: translate(2px, 2px);
}

.btn-icon {
  position: relative;
  width: 1.5rem;
  height: 1.5rem;
}

.logo-img {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.precast-panel-container {
  position: fixed;
  bottom: 1.5rem;
  right: 1.5rem;
  z-index: 50;
  display: flex;
}

.side-tabs {
  display: flex;
  flex-direction: column;
  margin-right: 0;
}

.side-tab {
  width: 3rem;
  height: 3rem;
  border: 2px solid var(--color-dark);
  border-right: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.15s ease;
  background-color: var(--color-light);
  cursor: pointer;
}

.side-tab:not(:first-child) {
  border-top: 0;
}

.side-tab:hover {
  background-color: #f3f4f6;
}

.side-tab[data-active="true"] {
  background-color: var(--color-primary);
  box-shadow: -2px 0px 0px 0px rgba(0, 0, 0, 1);
}

.tab-icon {
  transform: scale(1.25);
}

.precast-main-panel {
  background-color: var(--color-light);
  border: 2px solid var(--color-dark);
  box-shadow: var(--shadow-lg);
  transition: all 0.2s ease;
  width: 26.25rem;
  max-height: 85vh;
}

.precast-main-panel[data-minimized="true"] {
  width: 18rem;
  height: 3.5rem;
}

.panel-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0.75rem;
  border-bottom: 2px solid var(--color-dark);
  background-color: var(--color-primary);
}

.header-title {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.header-logo {
  width: 2rem;
  height: 2rem;
  background-color: var(--color-light);
  border: 2px solid var(--color-dark);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0.25rem;
}

.logo-fallback {
  width: 1rem;
  height: 1rem;
  background-color: var(--color-dark);
}

.panel-title {
  font-weight: bold;
  color: var(--color-dark);
  text-transform: uppercase;
  letter-spacing: 0.1em;
  font-size: 0.875rem;
}

.panel-subtitle {
  font-size: 0.75rem;
  color: rgba(0, 0, 0, 0.7);
  font-family: 'Courier New', monospace;
}

.header-controls {
  display: flex;
  align-items: center;
  gap: 0.25rem;
}

.control-btn {
  width: 2rem;
  height: 2rem;
  background-color: var(--color-light);
  border: 2px solid var(--color-dark);
  cursor: pointer;
  transition: background-color 0.15s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.control-btn:hover {
  background-color: var(--color-primary);
}

.control-close {
  background-color: var(--color-dark);
}

.control-close:hover {
  background-color: #374151;
}

.control-icon {
  font-weight: bold;
  font-size: 1.125rem;
  line-height: 1;
}

.close-icon {
  color: var(--color-light);
  font-weight: bold;
  font-size: 0.875rem;
}

.panel-content {
  padding: 1rem;
  overflow-y: auto;
  max-height: calc(85vh - 4rem);
  background-color: var(--color-light);
}

.tab-content {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.service-card {
  border: 2px solid var(--color-dark);
  padding: 1rem;
  background-color: var(--color-light);
}

.service-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 0.75rem;
}

.service-info {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.service-icon {
  width: 2rem;
  height: 2rem;
  background-color: var(--color-primary);
  border: 2px solid var(--color-dark);
  display: flex;
  align-items: center;
  justify-content: center;
}

.service-name {
  font-weight: bold;
  color: var(--color-dark);
  text-transform: uppercase;
  font-size: 0.875rem;
}

.service-port {
  font-size: 0.75rem;
  color: rgba(0, 0, 0, 0.6);
  font-family: 'Courier New', monospace;
}

.status-badge {
  padding: 0.25rem 0.75rem;
  font-size: 0.75rem;
  font-weight: bold;
  text-transform: uppercase;
  letter-spacing: 0.1em;
  border: 2px solid var(--color-dark);
  background-color: var(--color-primary);
  color: var(--color-dark);
}

.status-badge[data-success="true"] {
  background-color: var(--color-dark);
  color: var(--color-primary);
}

.test-btn {
  width: 100%;
  padding: 0.75rem 1rem;
  background-color: var(--color-primary);
  border: 2px solid var(--color-dark);
  color: var(--color-dark);
  font-weight: bold;
  text-transform: uppercase;
  font-size: 0.875rem;
  letter-spacing: 0.1em;
  box-shadow: var(--shadow-sm);
  cursor: pointer;
  transition: all 0.15s ease;
}

.test-btn:hover {
  box-shadow: 2px 2px 0px 0px rgba(0, 0, 0, 1);
  transform: translate(2px, 2px);
}

.test-btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.loading {
  display: flex;
  align-items: center;
  justify-content: center;
}

.spinner {
  display: inline-block;
  width: 1rem;
  height: 1rem;
  border: 2px solid var(--color-dark);
  border-top: 2px solid transparent;
  animation: spin 1s linear infinite;
  margin-right: 0.5rem;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.containers-list {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.container-item {
  border: 1px solid var(--color-dark);
  padding: 0.5rem;
}

.container-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.container-name {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.container-text {
  font-size: 0.75rem;
  font-family: 'Courier New', monospace;
}

.container-port {
  font-size: 0.75rem;
  font-weight: bold;
  color: var(--color-dark);
  background-color: var(--color-primary);
  padding: 0.125rem 0.5rem;
}

.result-display {
  margin-top: 0.75rem;
  padding: 0.75rem;
  border: 2px solid var(--color-dark);
}

.result-content {
  display: flex;
  align-items: flex-start;
  gap: 0.5rem;
}

.result-icon {
  width: 1rem;
  height: 1rem;
  margin-top: 0.125rem;
  background-color: var(--color-dark);
  display: flex;
  align-items: center;
  justify-content: center;
}

.result-details {
  flex: 1;
}

.result-message {
  font-weight: bold;
  color: var(--color-dark);
  text-transform: uppercase;
  font-size: 0.75rem;
  letter-spacing: 0.05em;
}

.result-timestamp {
  font-size: 0.75rem;
  color: rgba(0, 0, 0, 0.6);
  margin-top: 0.25rem;
  font-family: 'Courier New', monospace;
}

.result-json {
  margin-top: 0.5rem;
  padding: 0.5rem;
  background-color: rgba(0, 0, 0, 0.05);
  border: 1px solid rgba(0, 0, 0, 0.1);
}

.json-content {
  font-size: 0.75rem;
  font-family: 'Courier New', monospace;
  color: rgba(0, 0, 0, 0.7);
  overflow-x: auto;
}

.icon-black {
  color: var(--color-dark);
}

/* Responsive styles */
@media (min-width: 640px) {
  .tech-stack-grid {
    grid-template-columns: repeat(3, 1fr);
  }
  
  .footer-inner {
    flex-direction: row;
  }
  
  .hero-title {
    font-size: 2.25rem;
  }
}

@media (min-width: 1024px) {
  .tech-stack-grid {
    grid-template-columns: repeat(6, 1fr);
  }
  
  .hero-title {
    font-size: 3rem;
  }
}
{{/if}}