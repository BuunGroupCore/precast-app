{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "lib": ["ES2021", "WebWorker"],
    "jsx": "{{#if (eq framework "react")}}react-jsx{{else}}preserve{{/if}}",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "types": ["@cloudflare/workers-types"{{#if (eq database "cloudflare-d1")}}, "drizzle-orm"{{/if}}],
    "paths": {
      "@/*": ["./src/*"],
      "@db/*": ["./src/db/*"],
      "@routes/*": ["./src/routes/*"],
      "@middleware/*": ["./src/middleware/*"],
      "@utils/*": ["./src/utils/*"],
      "@types/*": ["./src/types/*"]
    }
  },
  "include": [
    "src/**/*",
    "worker-configuration.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".wrangler"
  ]
}