import { useState } from "react";

export default function Counter() {
  const [count, setCount] = useState(0);

  return (
    <div className="{{#if (eq styling 'tailwind')}}bg-white p-6 rounded-lg shadow-md max-w-sm mx-auto{{else}}counter{{/if}}">
      <h2 className="{{#if (eq styling 'tailwind')}}text-xl font-semibold text-gray-800 mb-4{{else}}counter-title{{/if}}">
        Counter Example
      </h2>
      <div className="{{#if (eq styling 'tailwind')}}flex items-center justify-center space-x-4{{else}}counter-controls{{/if}}">
        <button
          onClick={() => setCount(count - 1)}
          className="{{#if (eq styling 'tailwind')}}px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600 transition-colors{{else}}counter-button counter-button-minus{{/if}}"
        >
          -
        </button>
        <span className="{{#if (eq styling 'tailwind')}}text-2xl font-bold text-gray-800 min-w-[3rem] text-center{{else}}counter-value{{/if}}">
          {count}
        </span>
        <button
          onClick={() => setCount(count + 1)}
          className="{{#if (eq styling 'tailwind')}}px-4 py-2 bg-green-500 text-white rounded hover:bg-green-600 transition-colors{{else}}counter-button counter-button-plus{{/if}}"
        >
          +
        </button>
      </div>
      <button
        onClick={() => setCount(0)}
        className="{{#if (eq styling 'tailwind')}}mt-4 px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-600 transition-colors w-full{{else}}counter-reset{{/if}}"
      >
        Reset
      </button>
    </div>
  );
}