/* Precast Banner Styles */
.precast-banner-section {
  position: relative;
  width: 100%;
  overflow: hidden;
  background: linear-gradient(to bottom, #0f172a, #1e1b4b);
}

.precast-banner-container {
  position: relative;
  width: 100%;
  max-width: 1440px;
  margin: 0 auto;
}

.precast-banner-animation {
  width: 100%;
  height: 900px;
  position: relative;
  z-index: 1;
}

/* Responsive adjustments */
@media (max-width: 1440px) {
  .precast-banner-animation {
    height: 700px;
  }
}

@media (max-width: 768px) {
  .precast-banner-animation {
    height: 500px;
  }
}

@media (max-width: 480px) {
  .precast-banner-animation {
    height: 400px;
  }
}

/* Overlay content */
.precast-banner-overlay {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  z-index: 10;
  padding: 2rem;
  background: rgba(15, 23, 42, 0.8);
  backdrop-filter: blur(10px);
  border-radius: 1rem;
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.precast-banner-title {
  font-size: 3rem;
  font-weight: bold;
  color: #fff;
  margin-bottom: 1rem;
  background: linear-gradient(to right, #9333ea, #ec4899);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.precast-banner-subtitle {
  font-size: 1.25rem;
  color: #cbd5e1;
  margin: 0;
}

@media (max-width: 768px) {
  .precast-banner-title {
    font-size: 2rem;
  }
  
  .precast-banner-subtitle {
    font-size: 1rem;
  }
}