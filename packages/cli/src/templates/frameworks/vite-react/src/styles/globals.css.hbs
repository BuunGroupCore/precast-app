@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  :root {
    /* Brand Colors */
    --color-primary: 147 51 234; /* Purple */
    --color-secondary: 236 72 153; /* Pink */
    --color-accent: 139 92 246; /* Violet */
    
    /* Neutral Colors */
    --color-background: 15 23 42; /* Slate 900 */
    --color-surface: 30 41 59; /* Slate 800 */
    --color-border: 51 65 85; /* Slate 700 */
    
    /* Text Colors */
    --color-text-primary: 248 250 252; /* Slate 50 */
    --color-text-secondary: 203 213 225; /* Slate 300 */
    --color-text-muted: 148 163 184; /* Slate 400 */
    
    /* Semantic Colors */
    --color-success: 34 197 94; /* Green 500 */
    --color-warning: 250 204 21; /* Yellow 400 */
    --color-error: 239 68 68; /* Red 500 */
    --color-info: 59 130 246; /* Blue 500 */
    
    /* Typography */
    --font-sans: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    --font-mono: 'Fira Code', 'JetBrains Mono', Consolas, 'Courier New', monospace;
    
    /* Animations */
    --animation-fast: 150ms;
    --animation-base: 250ms;
    --animation-slow: 500ms;
    
    /* Shadows */
    --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
    --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1);
    --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1);
    --shadow-xl: 0 20px 25px -5px rgb(0 0 0 / 0.1);
    --shadow-glow: 0 0 20px rgb(147 51 234 / 0.3);
  }
  
  * {
    border-color: theme('colors.slate.700');
  }
  
  body {
    @apply bg-slate-900 text-slate-50;
    font-family: var(--font-sans);
    font-feature-settings: "rlig" 1, "calt" 1;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
  
  /* Custom scrollbar */
  ::-webkit-scrollbar {
    width: 12px;
    height: 12px;
  }
  
  ::-webkit-scrollbar-track {
    @apply bg-slate-900;
  }
  
  ::-webkit-scrollbar-thumb {
    @apply bg-slate-700 rounded-full;
    border: 3px solid rgb(15 23 42);
  }
  
  ::-webkit-scrollbar-thumb:hover {
    @apply bg-slate-600;
  }
  
  /* Focus styles */
  :focus-visible {
    @apply outline-none ring-2 ring-purple-500 ring-offset-2 ring-offset-slate-900;
  }
  
  /* Selection */
  ::selection {
    @apply bg-purple-500/30 text-white;
  }
}

@layer components {
  /* Gradient text utility */
  .gradient-text {
    @apply bg-gradient-to-r from-purple-400 to-pink-400 bg-clip-text text-transparent;
  }
  
  /* Glass morphism effect */
  .glass {
    @apply bg-slate-800/30 backdrop-blur-xl border border-slate-700/50;
  }
  
  /* Glow effect */
  .glow {
    box-shadow: 0 0 20px rgb(147 51 234 / 0.3);
  }
}

@layer utilities {
  /* Animations */
  @keyframes gradient {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }
  
  @keyframes blob {
    0% { transform: translate(0px, 0px) scale(1); }
    33% { transform: translate(30px, -50px) scale(1.1); }
    66% { transform: translate(-20px, 20px) scale(0.9); }
    100% { transform: translate(0px, 0px) scale(1); }
  }
  
  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-20px); }
  }
  
  @keyframes pulse-glow {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }
  
  .animate-gradient {
    animation: gradient 3s ease infinite;
  }
  
  .animate-blob {
    animation: blob 7s infinite;
  }
  
  .animate-float {
    animation: float 6s ease-in-out infinite;
  }
  
  .animate-pulse-glow {
    animation: pulse-glow 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
  
  .animation-delay-2000 {
    animation-delay: 2s;
  }
  
  .animation-delay-4000 {
    animation-delay: 4s;
  }
  
  /* Background patterns */
  .bg-grid-pattern {
    background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%239C92AC' fill-opacity='0.05'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
  }
  
  /* Gradient backgrounds */
  .bg-gradient-radial {
    background: radial-gradient(circle at center, var(--tw-gradient-stops));
  }
  
  /* Text shadows for better readability */
  .text-shadow-sm {
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
  }
  
  .text-shadow-md {
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
  }
  
  .text-shadow-lg {
    text-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
  }
  
  /* Size utilities */
  .bg-300\% {
    background-size: 300% 100%;
  }
}
