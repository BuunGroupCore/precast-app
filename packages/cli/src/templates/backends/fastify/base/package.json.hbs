{
  "name": "{{name}}-api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    {{#if config.orm}}{{#if (eq config.orm "prisma")}}"postinstall": "prisma generate",
    "predev": "prisma db push --skip-generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    {{/if}}{{#if (eq config.orm "drizzle")}}"predev": "drizzle-kit push",
    "prebuild": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    {{/if}}{{#if (eq config.orm "typeorm")}}"predev": "typeorm schema:sync -d src/data-source.ts",
    "db:migrate": "typeorm migration:run -d src/data-source.ts",
    "db:generate": "typeorm migration:generate -d src/data-source.ts",
    "db:revert": "typeorm migration:revert -d src/data-source.ts",
    "db:sync": "typeorm schema:sync -d src/data-source.ts",
    {{/if}}{{else}}{{#if (and config.authProvider (eq config.authProvider "better-auth") (ne config.database "none"))}}"postinstall": "tsx src/features/auth/scripts/run-migrations.ts || echo 'Migration setup will run on first start'",
    "db:migrate": "tsx src/features/auth/scripts/run-migrations.ts",
    "predev": "npm run db:migrate",
    {{/if}}{{/if}}{{#if (eq runtime "bun")}}"dev": "bun run --watch src/index.ts",
    {{else if (eq runtime "deno")}}"dev": "deno run --watch --allow-net --allow-read --allow-env src/index.ts",
    {{else if (eq packageManager "bun")}}"dev": "bun run --watch src/index.ts",
    {{else}}"dev": "tsx watch src/index.ts",
    {{/if}}
    "build": "tsup",
    {{#if (eq runtime "bun")}}"start": "bun dist/index.js",
    {{else if (eq runtime "deno")}}"start": "deno run --allow-net --allow-read --allow-env dist/index.js",
    {{else}}"start": "node dist/index.js",{{/if}}
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "fastify": "^4.26.2",
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "dotenv": "^16.4.5"{{#if typescript}},
    "@types/node": "^20.11.30"{{/if}}
  },
  "devDependencies": {
    {{#if typescript}}"tsx": "^4.7.1",
    "tsup": "^8.0.2",
    "typescript": "^5.4.2",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",{{/if}}
    "nodemon": "^3.1.0"
  }
}