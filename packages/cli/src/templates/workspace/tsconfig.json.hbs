{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["apps/web/src/*"]{{#if (or (eq backend "node") (eq backend "express") (eq backend "fastify") (eq backend "hono") (eq backend "nestjs") (eq backend "koa"))}},
      "@api/*": ["apps/api/src/*"]{{/if}}{{#if (and backend (ne backend "none"))}},
      "@{{name}}/shared": ["packages/shared/src"]{{/if}}
    }
  },
  "include": [
    "apps/web/src/**/*"{{#if (or (eq backend "node") (eq backend "express") (eq backend "fastify") (eq backend "hono") (eq backend "nestjs") (eq backend "koa"))}},
    "apps/api/src/**/*"{{/if}}{{#if (and backend (ne backend "none"))}},
    "packages/shared/src/**/*"{{/if}}
  ]
}