{
  "permissions": {
    "allow": [
      {{#each allowedTools}}
      "{{this}}"{{#unless @last}},{{/unless}}
      {{/each}}
    ]
  }{{#if hasPackageManagerHook}},
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/enforce-package-manager.sh"
          }{{#if hasSecurityHook}},
          {
            "type": "command",
            "command": ".claude/hooks/security-scanner.sh"
          }{{/if}}
        ]
      }
    ]{{#if hasLintHook}},
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/lint-check.sh"
          }
        ]
      }
    ]{{/if}}
  }{{else}}{{#if hasLintHook}},
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/lint-check.sh"
          }
        ]
      }
    ]
  }{{/if}}{{/if}}
}